{
    "rules": [
        {
            "if": {
                "lentitud": "alta",
                "uso_cpu": "alto"
            },
            "then": "sobrecarga_procesos"
        },
        {
            "if": {
                "reinicios": "frecuentes",
                "temperatura": "caliente"
            },
            "then": "sobrecalentamiento"
        },
        {
            "if": {
                "conexion": "sin_conexion",
                "otros_dispositivos": "con_conexion"
            },
            "then": "problema_red"
        },
        {
            "if": {
                "pantallazo": "azul"
            },
            "then": "error_hardware"
        },
        {
            "if": {
                "ruido_disco": "alto"
            },
            "then": "fallo_disco_duro"
        }
    ]
}
