{
    "rules": [
        {
            "if": {
                "lentitud": "alta",
                "uso_cpu": "alto"
            },
            "then": "malo"
        },
        {
            "if": {
                "lentitud": "media",
                "uso_cpu": "medio"
            },
            "then": "regular"
        },
        {
            "if": {
                "lentitud": "baja",
                "uso_cpu": "bajo"
            },
            "then": "bueno"
        },
        {
            "if": {
                "temperatura": "caliente",
                "reinicios": "frecuentes"
            },
            "then": "malo"
        },
        {
            "if": {
                "temperatura": "normal",
                "reinicios": "moderados"
            },
            "then": "regular"
        },
        {
            "if": {
                "temperatura": "fria",
                "reinicios": "pocos"
            },
            "then": "bueno"
        }
    ]
}
